
<h2 class='title_page'>Sign up</h2>

<div class='container'>
  <div class='row'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group form_login">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control field_login', placeholder: "Enter name" %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, class: 'text-color' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control field_login' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'text-color' %>
    <% if @validatable %>
      <em class= 'password_length_indication'>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control field_login' %>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation, class: 'text-color'%><br/>
      <%= f.password_field :password_confirmation, class: 'form-control field_login' %>
    </div>

    <div class='form-group'>
      <%= f.submit "Sign up", class: 'btn btn-default' %>
    </div>
<% end %>

  </div>
</div>

<div class='form-group'>
<%= render "devise/shared/links" %>

</div>



